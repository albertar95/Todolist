</div>

@section Scripts
    {
    <script src="@Url.Content("~/Contents/vendor/chart.js/Chart.min.js")"></script>
    <script src="@Url.Content("~/Contents/js/demo/chart-area-demo.js")"></script>
    <script type="text/javascript">
        $(function () {
            $("#dataTable1").DataTable({
                "order": [[1, "desc"]],
                "pageLength": 50
            });
            $("#btnMoreDetail").click(function (e)
            {
                e.preventDefault();
                $("#divStatusDetail").removeAttr('hidden');
                $(this).attr('hidden', 'hidden');
            });
            $("#sltCurrentMonth").val(@Model.SignalResultsVM.CurrentMonth).change();
            SetAreaChart('SignalResultsArea',@Html.Raw(Model.SignalResultsVM.SignalResultsAreaChart.Item1),@Html.Raw(Model.SignalResultsVM.SignalResultsAreaChart.Item2),'%');
            $("#sltCurrentMonth").change(function ()
            {
                var url = '@Url.Action("TradeDashboard", "Trades")' + '?symbol='+@string.Format("{0}", (int)Model.SignalResultsVM.Symbol)+'&timeframe='+@string.Format("{0}", (int)Model.SignalResultsVM.Timeframe)
                    +'&Month=' + $(this).val() + '#statistics';
                window.location = url;
            });
        });
    </script>
}

