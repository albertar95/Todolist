                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-dark text-uppercase mb-1">
                                                Candles To EMA Position
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Estimate.CandlesToEMAPosition.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-satellite-dish fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-success text-uppercase mb-1">
                                                Histogram Position
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Estimate.HistogramPosition.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-money-bill-wave fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <hr />
            <h4 class="header-control mb-4">Current Signal</h4>
            <!--current signal-->
            @if (Model.Signal != null)
            {
                <div class="row">
                    <div id="activeRow" class="col-xl-12 col-md-12">
                        <div class="row d-flex">
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-warning shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-warning text-uppercase mb-1">
                                                    Entry
                                                </div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Todolist.Helpers.CommonTradeOperations.ConvertToPersianDate(Model.Signal.StartDate)</div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Signal.EnterPrice.ToString("0.0##")</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-success text-uppercase mb-1">
                                                    Profit
                                                </div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.SignalProgress.Profit</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-percent fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-danger shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-danger text-uppercase mb-1">
                                                    stop loss
                                                </div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Signal.StopLostPrice.ToString("0.0##")</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-stop-circle fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-primary text-uppercase mb-1">
                                                    take profit
                                                </div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Signal.TakeProfitPrice.ToString("0.0##")</div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-bullhorn fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row">
                    <div id="deactiveRow" style="opacity:0.5;" class="col-xl-12 col-md-12">
                        <div class="row d-flex">
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-warning shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-warning text-uppercase mb-1">
                                                    Entry
                                                </div>
                                                <div class="h6 mb-0 text-gray-800"></div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-success shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-success text-uppercase mb-1">
                                                    Profit
                                                </div>
                                                <div class="h6 mb-0 text-gray-800"></div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-percent fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-danger shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-danger text-uppercase mb-1">
                                                    stop loss
                                                </div>
                                                <div class="h6 mb-0 text-gray-800"></div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-stop-circle fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-3 mb-3">
                                <div class="card border-left-primary shadow h-100 py-2">
                                    <div class="card-body">
                                        <div class="row no-gutters align-items-center">
                                            <div class="col mr-2">
                                                <div class="text-sm-left font-weight-bold text-primary text-uppercase mb-1">
                                                    take profit
                                                </div>
                                                <div class="h6 mb-0 text-gray-800"></div>
                                            </div>
                                            <div class="col-auto">
                                                <i class="fas fa-bullhorn fa-2x text-gray-300"></i>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <hr />
            <h4 class="header-control mb-4">Statistics</h4>
            <!--statistics-->
            <div class="row" id="statistics">
                <div class="form-group d-flex">
                    <label class="control-label col-md-4" style="padding-top:6px;">month : </label>
                    <div class="col-md-12">
                        <select id="sltCurrentMonth" class="form-control">
                            <option disabled>select month</option>
                            <option value="1">1-farvardin</option>
                            <option value="2">2-ordibehesht</option>
                            <option value="3">3-khordad</option>
                            <option value="4">4-tir</option>
                            <option value="5">5-mordad</option>
                            <option value="6">6-shahrivar</option>
                            <option value="7">7-mehr</option>
                            <option value="8">8-aban</option>
