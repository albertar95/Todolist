@model Todolist.ViewModels.NewTradeDashboardViewModel
@{
    ViewBag.Title = "Trade Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="PageWrapper">
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            @if (Model.Candle != null)
            {
                <h6 class="m-0 font-weight-bold text-primary">@string.Format("{0}-{1}", Enum.GetName(typeof(Todolist.Models.TradeModels.Symbol), Model.Candle.Symbol), Enum.GetName(typeof(Todolist.Models.TradeModels.Timeframe), Model.Candle.Timeframe))</h6>
            }
            else
            {
                <h6 class="m-0 font-weight-bold text-primary"></h6>
            }
            <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(-158px, 19px, 0px);">
                    @foreach (var sym in (Todolist.Models.TradeModels.Symbol[])Enum.GetValues(typeof(Todolist.Models.TradeModels.Symbol)))
                    {
                        foreach (var tf in (Todolist.Models.TradeModels.Timeframe[])Enum.GetValues(typeof(Todolist.Models.TradeModels.Timeframe)))
                        {
                            <a class="dropdown-item" href="@Url.Action("TradeDashboard","Trades",new { symbol = sym, timeframe = tf })">@string.Format("{0}-{1}", sym.ToString(), tf.ToString())</a>
                        }
                    }
                </div>
            </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            <!--top buttons-->
            <div class="row">
                <div class="col-md-12 mb-12 d-flex mb-4">
                    @if (Model.Candle != null)
                    {
                        <a class="btn btn-outline-success" href="@Url.Action("DefineOrderBlocks","Trades",new { symbol = Model.Candle.Symbol,timeframe = Model.Candle.Timeframe })">Add Ob</a>
                    }
                </div>
            </div>
            <!--current status-->
            <div class="row">
                <div id="activeRow" class="col-xl-12 col-md-12">
                    <div class="row d-flex">
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-success text-uppercase mb-1">
                                                Price
                                            </div>
                                                @if (Model.Candle != null)
                                                {
                                                    <div class="h6 mb-0 text-gray-800 text-center">@Model.Candle.Close.ToString()</div>
                                                }
                                                else
                                                {
                                                    <div class="h6 mb-0 text-gray-800 text-center"></div>
                                                }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-primary text-uppercase mb-1">
                                                RSI
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Candle.RSI.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-danger shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-danger text-uppercase mb-1">
                                                MACD
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Estimate.LinesOnMacdMapPosition.ToString()</div>
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Estimate.LinesPosition.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-wave-square fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-secondary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-secondary text-uppercase mb-1">
                                                Status
                                            </div>
                                            @if (Model.Signal != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">signal generated</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">probing</div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-lightbulb fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <a href="#" id="btnMoreDetail" style="padding-left:1em;"><i class="fa fa-plus"></i> details</a>
                    </div>
                    <div id="divStatusDetail" class="row" hidden>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-warning text-uppercase mb-1">
                                                Ema50
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Candle.Ema50.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-stopwatch fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-3 mb-3">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-sm-left font-weight-bold text-info text-uppercase mb-1">
                                                Ema200
                                            </div>
                                            @if (Model.Candle != null)
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center">@Model.Candle.Ema200.ToString()</div>
                                            }
                                            else
                                            {
                                                <div class="h6 mb-0 text-gray-800 text-center"></div>
                                            }
                                        </div>
                                        <div class="col-auto">
                                            <i class="fas fa-stopwatch-20 fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
